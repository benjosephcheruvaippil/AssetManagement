<?xml version="1.0" encoding="utf-8" ?>
<mopups:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:AssetManagement.Models"
             xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
             x:Class="AssetManagement.Views.AssetsByCategoryPage"
             Title="AssetsByCategoryPage" BackgroundColor="#80000000" CloseWhenBackgroundIsClicked="True">
    <ScrollView WidthRequest="300" HeightRequest="450" HorizontalOptions="Center" VerticalOptions="Center" Orientation="Vertical">


        <Border BackgroundColor="White">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10,10,10,10"/>
            </Border.StrokeShape>
            <VerticalStackLayout x:Name="stackLayout" Padding="3" Spacing="8" HorizontalOptions="FillAndExpand" VerticalOptions="Start">

            </VerticalStackLayout>
        </Border>

    </ScrollView>
</mopups:PopupPage>