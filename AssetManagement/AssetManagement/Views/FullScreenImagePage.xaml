<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AssetManagement.Views.FullScreenImagePage"
             BackgroundColor="Black">
    <Grid>
        <ScrollView x:Name="scrollView" Orientation="Both">
            <Grid>
                <Image x:Name="fullScreenImage"
                       Aspect="AspectFit"
                       VerticalOptions="FillAndExpand"
                       HorizontalOptions="FillAndExpand"
                       SizeChanged="fullScreenImage_SizeChanged">
                    <Image.GestureRecognizers>
                        <PinchGestureRecognizer PinchUpdated="OnPinchUpdated"/>
                        <TapGestureRecognizer Tapped="OnCloseTapped"/>
                    </Image.GestureRecognizers>
                </Image>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>
