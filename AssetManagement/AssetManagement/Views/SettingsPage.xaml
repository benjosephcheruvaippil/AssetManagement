<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AssetManagement.Views.SettingsPage"
             Title="Settings">
    <VerticalStackLayout>
        <Button x:Name="btnManageOwners" Text="Manage Owners/Users" Clicked="btnManageOwners_Clicked" BackgroundColor="LightGreen" TextColor="Black" WidthRequest="200" Margin="4"/>
        <Button x:Name="btnManageIncomeExpenseCategories" Text="Manage Categories" Clicked="btnManageIncomeExpenseCategories_Clicked" BackgroundColor="LightGreen" TextColor="Black" WidthRequest="200" Margin="4"/>
        <Button x:Name="btnSelectCurrency" Text="Change Currency" Clicked="btnSelectCurrency_Clicked" BackgroundColor="LightGreen" TextColor="Black" WidthRequest="200" Margin="4"/>
        <Button x:Name="btnRestoreDb" Text="Restore Database" Clicked="btnRestoreDb_Clicked" BackgroundColor="LightGreen" TextColor="Black" WidthRequest="200" Margin="4"/>
        <Button x:Name="btnBackup" Text="Backup Database" Clicked="btnBackup_Clicked" BackgroundColor="LightGreen" TextColor="Black" WidthRequest="200" Margin="4"/>
    </VerticalStackLayout>
</ContentPage>